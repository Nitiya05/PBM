<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    tools:context=".EmosiFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maret"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_emosi"
                android:layout_below="@id/imageView"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_grafik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grafik Emosi"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_below="@id/imageButton"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <include
                android:id="@+id/layout_grafik"
                layout="@layout/grafik_emosi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_grafik" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
